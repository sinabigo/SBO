name: "Let's SBO but Lite!"

on:
  workflow_dispatch:
  schedule:
    - cron: '*/21 * * * *'
    
concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v2
      
      - name: Setup PHP
        uses: shivammathur/setup-php@v2
        with:
          php-version: '7.4'
          
      - name: Execute PHP script and Push
        run: |
          cd lite
          php get.php
          php duplicate.php
          php sort.php
          php toSingbox.php
          php toClashSurfboard.php

          git config --global user.email "sina2941@gmail.com"
          git config --global user.name "sinabigo"
          git remote set-url origin https://x-access-token:${{ secrets.GITHUB_TOKEN }}@github.com/${{ github.repository }}
          git pull --rebase
          git add -A
          git commit -m "ðŸš€ Servers Updated - $(TZ='Asia/Tehran' date '+%Y-%m-%d %H:%M:%S')" || echo "No changes to commit"
          git push